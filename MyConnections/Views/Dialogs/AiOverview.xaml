<ui:ContentDialog
		x:Class="ConnectionMgr.Views.Dialogs.AiOverview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
		xmlns:local="clr-namespace:ConnectionMgr.Views.Dialogs"
        Title="AI Overview"
		Height="680" 
		Width="1280"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

	<ui:ContentDialog.Resources>
		<Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" TargetType="{x:Type local:AiOverview}" />
	</ui:ContentDialog.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="8" />
		</Grid.RowDefinitions>
		<TextBox x:Name="txtEditor" Grid.Row="0" Margin="8,8,8,8"
				 FontFamily="Consolas"
				 AcceptsReturn="True"
				 TextWrapping="Wrap" 
				 VerticalScrollBarVisibility="Visible"
				 ScrollViewer.CanContentScroll="True"
				 Text="{Binding Message}" />
	</Grid>
</ui:ContentDialog>
