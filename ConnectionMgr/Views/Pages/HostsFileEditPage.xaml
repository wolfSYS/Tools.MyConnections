<Page
    x:Class="ConnectionMgr.Views.Pages.HostsFileEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:conv="clr-namespace:ConnectionMgr.Converters"
    xmlns:local="clr-namespace:ConnectionMgr.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
	xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    Title="HostsFileEditPage"
    d:DataContext="{d:DesignInstance local:HostsFileEditPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
	ScrollViewer.CanContentScroll="False"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <conv:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
		<conv:HeightMinusMarginsConverter x:Key="HeightMinusMarginsConverter"/>
		<BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>

	<Grid VerticalAlignment="Top">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<!--- Pseudo-Menu -->
		<StackPanel Grid.Row="0"
					Orientation="Horizontal">
			<ui:Button Content="Save"
					   ToolTip="Save changes to Hosts file"
					   Command="{Binding ViewModel.SaveFileCommand}"
					   CommandParameter="{Binding ViewModel.HasChanges}"
					   Icon="{ui:SymbolIcon DocumentSave24}" />
			<ui:Button Content="Cancel"
					   ToolTip="Cancel pending changes"
					   Command="{Binding ViewModel.CancelChangesCommand}"
					   CommandParameter="{Binding ViewModel.HasChanges}"
					   Margin="4,0,0,0"
					   Icon="{ui:SymbolIcon DismissCircle24}" />
			<!-- ProgressRing -->
			<ui:ProgressRing IsIndeterminate="True"
						 Height="28" Width="28"
						 Margin="36,0,0,0"
						 Visibility="{Binding ViewModel.ShowProgress, Converter={StaticResource BoolToVis}}" />
		</StackPanel>

		<!-- "Editor" -->
		<ScrollViewer Grid.Row="1"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto">
			<TextBox Grid.Row="1" 
					 x:Name="txtEditor"
					 HorizontalAlignment="Stretch"
					 VerticalAlignment="Stretch"
					 Width="Auto"
					 Margin="2,18,2,12"
					 FontFamily="Consolas"
					 AcceptsReturn="True"
					 TextWrapping="NoWrap"
					 Height="{Binding RelativeSource={RelativeSource AncestorType=Page},
									Path=ActualHeight,
									Converter={StaticResource HeightMinusMarginsConverter}}"
					 MaxHeight="{Binding RelativeSource={RelativeSource AncestorType=Page},
									Path=ActualHeight,
									Converter={StaticResource HeightMinusMarginsConverter}}"
					 Text="{Binding ViewModel.HostsFileContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >
				<i:Interaction.Triggers>
					<i:EventTrigger EventName="TextChanged">
						<i:InvokeCommandAction 
							Command="{Binding ViewModel.EditorTextChangedCommand}" 
							CommandParameter="{Binding ElementName=txtEditor}" />
					</i:EventTrigger>
				</i:Interaction.Triggers>
			</TextBox>
		</ScrollViewer>

	</Grid>
</Page>
